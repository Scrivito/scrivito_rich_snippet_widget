<%= render 'rich_snippet/thing/details', obj: obj, url_is_mandatory: false %>

<%= scrivito_details_for "Offer attributes" do %>
  <%= scrivito_details_for 'Availability starts' do %>
    <%= scrivito_tag :div, obj, :availability_starts %>
  <% end %>

  <%= scrivito_details_for 'Availability ends' do %>
    <%= scrivito_tag :div, obj, :availability_ends %>
  <% end %>

  <%= scrivito_details_for 'Availability' do %>
    <%= scrivito_tag :div, obj, :availability %>
  <% end %>

  <%= scrivito_details_for 'Price' do %>
    <%= scrivito_tag :div, obj, :price %>
  <% end %>

  <%= scrivito_details_for 'Price currency' do %>
    <%= scrivito_tag :div, obj, :price_currency %>
  <% end %>

  <%= scrivito_details_for 'Item condition' do %>
    <%= scrivito_tag :div, obj, :item_condition %>
  <% end %>

  <%= scrivito_details_for 'Inventory level' do %>
    <%= scrivito_tag :div, obj, :inventory_level %>
  <% end %>

  <%= scrivito_details_for 'Seller' do %>
    <%= scrivito_tag :div, obj, :seller, data: {scrivito_editors_filter_context: {rich_snippet_filter: ['Person', 'Organization']}} %>
  <% end %>
<% end %>
