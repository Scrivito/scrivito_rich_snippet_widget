      <%= scrivito_details_for 'lyricist' do %>
        <%= scrivito_tag :div, obj, :lyricist, data: {scrivito_editors_filter_context: {rich_snippet_filter: ['Person']}} %>
      <% end %>

      <%= scrivito_details_for 'lyrics' do %>
        <%= scrivito_tag :div, obj, :lyrics %>
      <% end %>
    <% end %>
  <% end %>

<% end %>
